<Window x:Class="GDS_SERVER_WPF.ChangeNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GDS_SERVER_WPF"
        mc:Ignorable="d"
        Title="ChangeNote" Height="400" Width="400" WindowStartupLocation="CenterScreen" Icon="Images/logo_gopas_sk.ico" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" BorderBrush="Black" Grid.Row="0" Grid.ColumnSpan="2" Margin="5">
            <TextBox x:Name="txtBoxPostInstalls" x:FieldModifier="public" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Foreground="Black" Background="White" FontSize="16" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        </Border>
        <Button x:Name="btnOK" Grid.Column="0" Grid.Row="1" Margin="5" Content="OK" Width="100" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Grid.Column="1" Grid.Row="1" Margin="5" Content="Cancel" Width="100" Click="btnCancel_Click"/>
    </Grid>
</Window>
